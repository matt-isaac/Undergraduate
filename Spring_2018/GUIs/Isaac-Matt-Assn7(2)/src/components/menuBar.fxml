<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuBarController">
  <menus>
    <Menu mnemonicParsing="false" text="Settings">
      <items>
            <MenuItem mnemonicParsing="false" text="Choose Color">
               <graphic>
                  <ColorPicker fx:id="menuChooseColor" promptText="Choose Color" />
               </graphic>
            </MenuItem>
            <MenuItem fx:id="menuChooseMode" mnemonicParsing="false" text="Choose Mode" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Stats">
      <items>
        <MenuItem fx:id="menuHighScoreList" mnemonicParsing="false" text="High Score List" />
            <MenuItem fx:id="menuHistory" mnemonicParsing="false" text="History" />
            <MenuItem fx:id="menuClearHistory" mnemonicParsing="false" text="Clear History" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Help">
      <items>
        <MenuItem fx:id="menuAbout" mnemonicParsing="false" text="About" />
            <MenuItem fx:id="menuRules" mnemonicParsing="false" text="Rules" />
      </items>
    </Menu>
  </menus>
</MenuBar>
